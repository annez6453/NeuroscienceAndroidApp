<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="luc.edu.neuroscienceapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ImageChannelConversionActivity"
            android:label="@string/title_activity_image_channel_conversion"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ImageMenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activities.ImageGalleryActivity"
            android:label="@string/title_activity_gallery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ImageGrayscaleCardActivity"
            android:label="@string/backdrop_title"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ImagePatchesActivity"
            android:label="@string/title_activity_patches"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ImageExamplePatchesActivity"
            android:label="@string/title_activity_example_patches" />
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/title_activity_about" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SoundMenuActivity"></activity>
    </application>

</manifest>